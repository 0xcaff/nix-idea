<idea-plugin version="2">
  <id>cc.cflags.nixitch</id>
  <name>Nixitch</name>
  <version>0.1.1.1</version>
  <vendor email="ed@cflags.cc" url="http://cflags.cc">cc $CFLAGS</vendor>

  <description><![CDATA[
    A Nix expression language plugin. Guaranteed no itching.
  ]]></description>

  <change-notes><![CDATA[
    <p>
        <span style="color:red">You cannot use multiple Nix plugins at the same time, be sure to always uninstall
        any previously installed when updating.</span>
    </p>
    <p>
        If you encounter any issues, please
        <a href="https://github.com/edwtjo/nixitch/issues">report them</a>.
    </p>

    <p>
        <b>v0.1.1.1</b>
        <ul>
            <li>Read environment variables on start</li>
            <li>Modify environment variables via plugin settings.</li>
        </ul>
    </p>

    ]]>
  </change-notes>

  <idea-version since-build="131"/>

  <!-- depends>com.intellij.modules.lang</depends -->
  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="cc.cflags.nixitch.file.NixFileTypeFactory"/>
    <lang.parserDefinition
            language="Nix"
            implementationClass="cc.cflags.nixitch.lang.NixParserDefinition" />
    <lang.syntaxHighlighterFactory key="Nix" implementationClass="cc.cflags.nixitch.lang.NixSyntaxHighlighterFactory"/>
      <projectConfigurable instance="cc.cflags.nixitch.settings.NixitchSettings"/>
  </extensions>
  <application-components />
  <project-components />
  <actions />
</idea-plugin>