<idea-plugin version="2">
  <id>${project.artifactId}</id>
  <name>${project.name}</name>
  <version>${project.version}</version>
  <vendor email="${vendor.email}" url="${vendor.url}">${vendor.name}</vendor>

  <description><![CDATA[

    <h1>Nixitch</h1>
    <br />

    ${project.description}
    <br />
      <a href="https://github.com/edwtjo/nixitch">GitHub</a> | Donate <a href="https://blockchain.info/address/15eWtromv9U1g8knFy7hkLJg942DRHmHrC">BTC</a>
    <br /><br />

    <b>Features</b>
    <ul>
        <li>Syntax highlighting</li>
    </ul>
  ]]></description>

  <change-notes><![CDATA[
    <p>
        If you encounter any issues, please
        <a href="https://github.com/edwtjo/nixitch/issues">report them</a>.
    </p>

    <p>
      <b>v0.1.2</b>
      <ul>
        <li>Mavenized project</li>
        <li>Added Travis CI</li>
        <li>Use proguard to minimize distzip</li>
      </ul>
    </p>

    <p>
        <b>v0.1.1.1</b>
        <ul>
            <li>Read environment variables on start</li>
            <li>Modify environment variables via plugin settings.</li>
        </ul>
    </p>

    ]]>
  </change-notes>

  <idea-version since-build="131"/>

  <depends>com.intellij.modules.lang</depends>
  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="cc.cflags.nixitch.file.NixFileTypeFactory"/>
    <lang.parserDefinition
            language="Nix"
            implementationClass="cc.cflags.nixitch.lang.NixParserDefinition" />
    <lang.syntaxHighlighterFactory key="Nix" implementationClass="cc.cflags.nixitch.lang.NixSyntaxHighlighterFactory"/>
      <projectConfigurable instance="cc.cflags.nixitch.settings.NixitchSettings"/>
  </extensions>
  <application-components />
  <project-components />
  <actions />
</idea-plugin>
